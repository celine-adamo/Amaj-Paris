{% extends 'base.html.twig' %}

{% block title %}Panier{% endblock %}

{% block body %}
    <div class="container contner">
        <div class="row">
            {% set bigTotal = null %}
            <h1>Mon Panier</h1>
            <div class="d-flex justify-content-between">
                <p>Retrouvez l'ensemble des produits que vous avez ajoutés à votre panier.</p>
                <a class="btn btn-secondary float-right" href="{{ path('dressing') }}">Ajouter de nouveaux produits</a>
            </div>
            {% if cart|length > 0 %}
                <table class="table mt-4">
                    <thead>
                        <tr>
                            <th scope="col">Produits</th>
                            <th scope="col">Icônique</th>
                            <th scope="col">Quantité</th>
                            <th scope="col">Taille</th>
                            <th scope="col">Prix</th>
                            <th scope="col">Total</th>
                            <th scope="col"></th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for product in cart %}
                        {% set quantity = product.quantity %}
                        {% set price = (product.produit.price / 100)|number_format(2, ',', '.') %}
                        {% set total = ((product.produit.price * quantity)/100)|number_format(2, ',', '.') %}
                        <tr>
                            <th class="d-flex flex-column">
                                <img width="50px" height="50px" src="assets/images/products/{{ product.produit.img }}" alt="{{ product.produit.name }}">
                                <small>{{ product.produit.name }}</small>
                            </th>
                            <th>
                                <img width="50px" height="50px" src="assets/images/iconics/{{ product.iconic.pics }}" alt="{{ product.iconic.name }}">
                            </th>
                            <td>
                                x {{ quantity }}
                            </td>
                            <td>
                                <select name="select">
                                    {% for size in product.produit.size %}
                                        <option value="{{ size }}">{{ size }}</option>
                                    {% endfor %}
                                </select>
                            </td>
                            <td>
                                {{ price }} €
                            </td>
                            <td>
                                {{ total }} €
                            </td>
                        </tr>
                        {% set bigTotal = bigTotal + (product.produit.price * product.quantity) %}
                    {% endfor %}
                    </tbody>
                </table>
                <div class="text-right mb-5">
                    <b>Nombre de produit :</b> {{ cart|length }} <br>
                    <b>Total :</b> {{ (bigTotal / 100)|number_format(2, ',', '.') }} <br>
                    <a href="#" class="btn btn-success mt-3">Valider mon panier</a>
                    <a href="{{ path('delete_all_cart') }}" class="btn btn-danger mt-3">Vider mon panier</a>
                </div>
            {% else %}
                <h4 class="text-center my-5">Vous n'avez pas encore ajouter d'article dans votre panier</h4>
            {% endif %}
        </div>
    </div>
{% endblock %}
