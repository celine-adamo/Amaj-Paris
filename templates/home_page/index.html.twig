{% extends 'base.html.twig' %}

{% block title %}
    {% trans %} Accueil {% endtrans %}
{% endblock %}

{% block body %}
    {% block carousel %}{% endblock %}
    <div class="container">
        <div class="row mb-5">
            <div class="border border-dark h-75 d-flex justify-content-center my-5">
                <br>
                <br>
                <br>
                <br>
                <br>
                <br>
                Photo ici
                <br>
                <br>
                <br>
                <br>
                <br>
                <br>
            </div>
            <div class="col-12 d-flex justify-content-center mb-5">
                <a class="btn btn-dark btn-lg" href="#">
                    {% trans %} Créez votre personnalisation {% endtrans %}
                </a>
            </div>
            <br>
            <hr>
            <h2 id="iconics-title" class="text-center mt-3">
                {% trans %} Les icôniques {% endtrans %}
            </h2>
            {% for iconic in iconics %}
                <div class="col-6 col-md-4 mb-2">
                    <div class="card border-0">
                        <img class="card-img-top" src="{{ asset('assets/images/iconics') }}/{{ iconic.pics }}"
                             alt="Illustration de {{ iconic.name }}">
                        <div class="card-body">
                            <h5 class="card-title text-center">{{ iconic.name }}</h5>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
    {% block navbar %}{% endblock %}
{% endblock %}


