{% extends 'base.html.twig' %}

{% block title %}
	S'inscrire
{% endblock %}

{% block body %}
	<div class="container mt-5">
		<div class="row">
			<div class="col-12 form-register">
				<h2 class="contner form-cont">S'inscrire</h2>

				{% for message in app.flashes('error')  %}
					<div class="alert alert-danger">
						{{ message }}
					</div>
				{% endfor %}

				{{form_start(form)}}
					<div class="d-md-flex justify-content-between align-items-center">
						<div id="first_name" class="col-md-6 p-1">
							{{form_row(form.firstname)}}
						</div>
						<div id="last_name" class="col-md-6 p-1">
							{{form_row(form.lastname)}}
						</div>
					</div>
					<div id="email" class="p-1">
						{{form_row(form.email)}}
					</div>
					<div id="password" class="p-1">
						{{form_row(form.password)}}
					</div>
					<div class="p-1">
						{{form_row(form.submit)}}
					</div>
				{{form_end(form)}}
			</div>
		</div>
	</div>
{% endblock %}
