{% extends 'base.html.twig' %}

{% block title %}
  {{ product.name }}
{% endblock %}

{% block body %}
  <div class="container contner">
    <div class="row">
        <h2 class="text-center text-uppercase mb-5">
            {{ product.name }}
        </h2>
        {# TODO: A voir avec Céline #}
      <div class="text-center col-12">
        <div class="position-relative top-50 start-50 translate-middle imgBox">
            <img class="position-absolute w-100 top-0 start-0 d-none"
                 src="{{ asset('assets/images/products') }}/{{ product.img }}"
                 alt="Modèle {{ product.name }}"
            />
            <img class="position-absolute w-100 top-0 start-0 cloth-back d-none"
                 src="{{ asset('assets/images/products') }}/{{ product.clothBack }}"
                 alt="Modèle {{ product.name }}"
            />
        </div>
{#          <div class="d-flex d-md-none col-12">#}
{#              <div class="col-6 imgBox">#}
{#                  <img height="300px" src="{{ asset('assets/images/products') }}/{{ product.img }}" alt="Modèle {{ product.name }}">#}
{#              </div>#}
{#              <div class="col-6 imgBox">#}
{#                  <img height="300px" src="{{ asset('assets/images/products') }}/{{ product.clothBack }}" alt="Modèle {{ product.name }}">#}
{#              </div>#}
{#          </div>#}
      </div>
       <h2 id="iconics-title" class="text-center mt-3">
            {% trans %} Les icôniques {% endtrans %}
       </h2>
        <div class="col-12">
            <div class="col-md-4 offset-md-4 align-items-center text-center p-2">
                <h3 id="iconics-title" class="text-nowrap mt-3 text-white bg-dark">
                    {% trans %}Je choisis mon icônique{% endtrans %}
                </h3>
            </div>
        </div>
        {% for iconic in iconics %}
            <div class="col-6 col-md-2 my-4 img-iconic">
                <a class="d-flex nav-link text-dark" href="{{ path('img-on-clothes', { "slug": product.slug, "slugIconic": iconic.slug }) }}">
                <div class="card border-0">
                    <img class="card-img-top " src="{{ asset('assets/images/iconics') }}/{{ iconic.pics }}"
                         alt="Illustration de {{ iconic.name }}">
                    <div class="card-body">
                        <h5 class="card-title text-center ">{{ iconic.name }}</h5>
                    </div>
                </div>
                </a>
            </div>
        {% endfor %}
        <div class="mb-5">
            <button class="btn btn-dark {% if iconic is not defined %} disabled {% endif %}">
                <a class="text-white nav-link" href="#">
                    {% trans %} Ajouter à mon panier {% endtrans %}
                    {% if iconic is not defined %} <small>{% trans %} (choisissez un iconique) {% endtrans%}</small> {% endif %}
                </a>
            </button>
        </div>
    </div>
  </div>
{% endblock %}

{% block javascripts %}
    <!-- Three.js -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/three.js/r126/three.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.6.0/gsap.min.js"></script>
    <script src="{{ asset('assets/js/hover.js') }}"></script>
    <!-- Three.js -->
    <!-- Custom -->
    <script src="{{ asset('assets/js/hoverProducts.js')}}"></script>
    <!-- Custom -->
{% endblock %}
