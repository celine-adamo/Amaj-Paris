{% extends 'base.html.twig' %}

{% block title %}
  {{ product.name }}
{% endblock %}

{% block body %}
  <div class="container contner">
    <div class="row">
      <div class="text-center col-md-6 offset-md-3">
        <h2>
          {{ product.name }}
        </h2>
        <div class="position-relative">
            <img class="card-img-top clothe-shadow mh-50"
                 src="{{ asset('assets/images/products') }}/{{ product.img }}"
                 alt="Modèle {{ product.name }}"
            />
            {% if iconic is defined %}
                <div class="position-absolute col-6 col-md-2 my-4 iconicOnCloth">
                    <div class="card border-0">
                        <img class="card-img-top" src="{{ asset('assets/images/iconics') }}/{{ iconic.pics }}"
                             alt="Illustration de {{ iconic.name }}"
                        >
                    </div>
                </div>
            {% endif %}
        </div>

          <img class="card-img-top clothe-shadow d-none"
          src="{{ asset('assets/images/products') }}/{{ product.clothBack }}"
          alt="Modèle {{ product.name }}" /> 
      </div>
       <h2 id="iconics-title" class="text-center mt-3">
            {% trans %} Les icôniques {% endtrans %}
       </h2>
        {% for iconic in iconics %}
            <div class="col-6 col-md-2 my-4 img-iconic">
                <a class="d-flex nav-link text-dark" href="{{ path('img-on-clothes', { "slug": product.slug, "id": iconic.id }) }}">
                <div class="card border-0">
                    <img class="card-img-top " src="{{ asset('assets/images/iconics') }}/{{ iconic.pics }}"
                         alt="Illustration de {{ iconic.name }}">
                    <div class="card-body">
                        <h5 class="card-title text-center ">{{ iconic.name }}</h5>
                    </div>
                </div>
                </a>
            </div>
        {% endfor %}
    </div>
  </div>
{% endblock %}
